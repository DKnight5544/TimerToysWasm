
@using TimerToysShared.Model

@inject HttpClient Http

<input class="page-name" @bind="pageName" onfocus="this.select();" />

@code {

    private Timer myTimer = new Timer();

    private String pageName
    {
        get { return myTimer.PageName; }
        set
        {
            if (string.IsNullOrWhiteSpace(value))
            {
                StateHasChanged();
            }
            else
            {
                myTimer.PageName = value;
                Http.PostAsJsonAsync("UpdatePageName", myTimer);
            }
        }
    }


    public void SetName(Timer tmr)
    {
        myTimer = tmr;
        pageName = tmr.PageName;
        StateHasChanged();
    }

}
